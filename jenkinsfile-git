pipeline {
    agent any

    stages {
        stage('git checkout') {
            steps {
               
                git branch: 'main', credentialsId: 'git', url: 'https://github.com/devopsPRO27/flask3.git/'
            }
        }
         stage('python build ') {
            steps {
               sh'python3 -m pytest test1.py'
               sh'python3 flask3.py&'
            }
        }
        
         stage('Testing') {
            steps {
                 sh'pip install pytest'
               sh'python3 -m pytest test1.py'
            }
        } 
        
        
    }
}
